<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_margin="4dp"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="1dp"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingHorizontal="4dp"
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_height="130dp">

                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_unboxing"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                tools:text="$BIRD - Blue Bird"
                android:textColor="@android:color/black"
                android:ellipsize="marquee" />
            <TextView
                android:id="@+id/tv_secondary"
                android:drawablePadding="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_light"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                tools:text="Vol. 1, December 2021"
                android:text="date"/>

            <TextView
                android:id="@+id/tv_content"
                android:drawablePadding="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                android:textColor="#999A9A"
                android:maxLines="3"
                android:ellipsize="marquee"
                tools:text="Relaksasi pembatasan Covid-19 mendorong pemulihan kinerja bisnis Blue Bird ($BIRD). Layanan..."/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>